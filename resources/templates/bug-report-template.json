{\n  \"templateName\": \"Bug Report Template\",\n  \"version\": \"1.0\",\n  \"fields\": {\n    \"bugId\": {\n      \"label\": \"Bug ID\",\n      \"type\": \"text\",\n      \"placeholder\": \"e.g., BUG-123\",\n      \"required\": true\n    },\n    \"reportedBy\": {\n      \"label\": \"Reported By\",\n      \"type\": \"text\",\n      \"placeholder\": \"Your Name\",\n      \"required\": true\n    },\n    \"dateReported\": {\n      \"label\": \"Date Reported\",\n      \"type\": \"date\",\n      \"required\": true\n    },\n    \"priority\": {\n      \"label\": \"Priority\",\n      \"type\": \"select\",\n      \"options\": [\"High\", \"Medium\", \"Low\"],\n      \"required\": true\n    },\n    \"severity\": {\n      \"label\": \"Severity\",\n      \"type\": \"select\",\n      \"options\": [\"Critical\", \"Major\", \"Minor\", \"Cosmetic\"],\n      \"required\": true\n    },\n    \"device\": {\n      \"label\": \"Device\",\n      \"type\": \"text\",\n      \"placeholder\": \"e.g., MacBook Pro, iPhone 13\",\n      \"required\": false\n    },\n    \"osVersion\": {\n      \"label\": \"OS & Version\",\n      \"type\": \"text\",\n      \"placeholder\": \"e.g., Windows 11, iOS 15.4\",\n      \"required\": false\n    },\n    \"browserVersion\": {\n      \"label\": \"Browser & Version\",\n      \"type\": \"text\",\n      \"placeholder\": \"e.g., Chrome 99.0.4844.51\",\n      \"required\": false\n    },\n    \"appVersion\": {\n      \"label\": \"App Version\",\n      \"type\": \"text\",\n      \"placeholder\": \"e.g., 2.4.1\",\n      \"required\": true\n    },\n    \"description\": {\n      \"label\": \"Description\",\n      \"type\": \"textarea\",\n      \"placeholder\": \"Describe the bug in detail\",\n      \"required\": true\n    },\n    \"stepsToReproduce\": {\n      \"label\": \"Steps to Reproduce\",\n      \"type\": \"textarea\",\n      \"placeholder\": \"List the steps to reproduce the bug\",\n      \"required\": true\n    },\n    \"expectedBehavior\": {\n      \"label\": \"Expected Behavior\",\n      \"type\": \"textarea\",\n      \"placeholder\": \"What should happen\",\n      \"required\": true\n    },\n    \"actualBehavior\": {\n      \"label\": \"Actual Behavior\",\n      \"type\": \"textarea\",\n      \"placeholder\": \"What actually happens\",\n      \"required\": true\n    }\n  },\n  \"structure\": {\n    \"sections\": [\n      {\n        \"title\": \"BUG REPORT\",\n        \"fields\": []\n      },\n      {\n        \"title\": \"BASIC INFORMATION\",\n        \"fields\": [\"bugId\", \"reportedBy\", \"dateReported\", \"priority\", \"severity\"]\n      },\n      {\n        \"title\": \"ENVIRONMENT\",\n        \"fields\": [\"device\", \"osVersion\", \"browserVersion\", \"appVersion\"]\n      },\n      {\n        \"title\": \"DESCRIPTION\",\n        \"fields\": [\"description\"]\n      },\n      {\n        \"title\": \"STEPS TO REPRODUCE\",\n        \"fields\": [\"stepsToReproduce\"]\n      },\n      {\n        \"title\": \"EXPECTED BEHAVIOR\",\n        \"fields\": [\"expectedBehavior\"]\n      },\n      {\n        \"title\": \"ACTUAL BEHAVIOR\",\n        \"fields\": [\"actualBehavior\"]\n      }\n    ]\n  }\n}